---
import Layout from '../components/layout/Layout.astro';
import Button from '../components/ui/Button.astro';
---

<Layout title="404 - Page non trouvée | ReadKode" description="Cette page n'existe pas." locale="fr">
  <section class="min-h-screen flex items-center justify-center px-4">
    <div class="text-center space-y-8 max-w-lg">
      <!-- Error code -->
      <div class="relative">
        <span class="text-[150px] sm:text-[200px] font-bold text-bg-tertiary/30 select-none">404</span>
        <div class="absolute inset-0 flex items-center justify-center">
          <span class="text-6xl sm:text-8xl font-bold text-accent">404</span>
        </div>
      </div>

      <!-- Message -->
      <div class="space-y-4">
        <h1 class="text-2xl sm:text-3xl font-bold text-text-primary">
          Page non trouvée
        </h1>
        <p class="text-text-secondary text-lg">
          Oups ! Cette page n'existe pas ou a été déplacée.
        </p>
      </div>

      <!-- CTA -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="primary" size="lg" href="/">
          Retour à l'accueil
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
        </Button>
      </div>

      <!-- Fun code snippet -->
      <div class="mt-12 p-4 bg-bg-code rounded-lg text-left font-mono text-sm">
        <div class="text-text-tertiary">// Error handling</div>
        <div>
          <span class="text-error">if</span>
          <span class="text-text-primary"> (page === </span>
          <span class="text-warning">"not_found"</span>
          <span class="text-text-primary">) {'{'}</span>
        </div>
        <div class="pl-4">
          <span class="text-accent">return</span>
          <span class="text-text-primary"> home;</span>
        </div>
        <div class="text-text-primary">{'}'}</div>
      </div>
    </div>
  </section>
</Layout>
