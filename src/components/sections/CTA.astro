---
import { getTranslations } from '../../i18n';
import ScrollReveal from '../animated/ScrollReveal';
import Button from '../ui/Button.astro';

interface Props {
  locale?: 'fr' | 'en';
}

const { locale = 'fr' } = Astro.props;
const t = getTranslations(locale);
---

<section id="waitlist" class="relative py-12 sm:py-16 md:py-24 lg:py-32 overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-b from-bg-primary via-bg-secondary/50 to-bg-primary" />

  <!-- Decorative elements -->
  <div class="absolute top-0 left-1/4 w-48 sm:w-64 md:w-80 lg:w-96 h-48 sm:h-64 md:h-80 lg:h-96 bg-accent/5 rounded-full blur-3xl" />
  <div class="absolute bottom-0 right-1/4 w-40 sm:w-56 md:w-72 lg:w-80 h-40 sm:h-56 md:h-72 lg:h-80 bg-success/5 rounded-full blur-3xl" />

  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <ScrollReveal client:visible>
      <!-- Mascotte -->
      <div class="mb-8">
        <img
          src="/images/Mascotte Happy.svg"
          alt="ReadKode Mascotte"
          class="w-24 h-24 mx-auto animate-float"
        />
      </div>

      <!-- Title -->
      <h2 class="section-title mb-4">
        {t.cta.title}
      </h2>

      <!-- Subtitle -->
      <p class="section-subtitle mx-auto mb-10">
        {t.cta.subtitle}
      </p>

      <!-- Waitlist form -->
      <form
        id="waitlist-form"
        class="max-w-md mx-auto"
        action="https://formsubmit.co/matteolepietre@gmail.com"
        method="POST"
      >
        <!-- FormSubmit settings -->
        <input type="hidden" name="_subject" value="Nouvelle inscription waitlist ReadKode!" />
        <input type="hidden" name="_captcha" value="false" />
        <input type="hidden" name="_template" value="table" />
        <input type="text" name="_honey" style="display:none" />

        <div class="flex flex-col sm:flex-row gap-3">
          <input
            type="email"
            name="email"
            required
            autocomplete="email"
            inputmode="email"
            placeholder={t.cta.emailPlaceholder}
            class="flex-1 px-4 sm:px-5 py-3.5 sm:py-4 text-base rounded-lg sm:rounded-md bg-bg-secondary border border-bg-tertiary text-text-primary placeholder:text-text-secondary focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20 transition-all duration-200 min-h-[48px]"
          />
          <Button variant="primary" size="lg" type="submit">
            {t.cta.button}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </Button>
        </div>

        <!-- Success message (hidden by default) -->
        <p id="success-message" class="hidden mt-4 text-success font-medium">
          {t.hero.waitlistSuccess} ðŸŽ‰
        </p>
      </form>

      <!-- Store badges -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-3 sm:gap-4 mt-8 sm:mt-10">
        <span class="text-text-secondary text-sm">{t.hero.comingSoon}</span>
        <div class="flex gap-3">
          <!-- App Store -->
          <div class="h-12 sm:h-12 px-4 sm:px-5 bg-bg-secondary rounded-lg flex items-center gap-2 sm:gap-3 opacity-60 cursor-not-allowed border border-bg-tertiary min-w-[120px]">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 shrink-0" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
            </svg>
            <div class="text-left">
              <div class="text-xs sm:text-xs text-text-secondary leading-tight">Soon on</div>
              <div class="text-sm font-medium">App Store</div>
            </div>
          </div>
          <!-- Google Play -->
          <div class="h-12 sm:h-12 px-4 sm:px-5 bg-bg-secondary rounded-lg flex items-center gap-2 sm:gap-3 opacity-60 cursor-not-allowed border border-bg-tertiary min-w-[120px]">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 shrink-0" viewBox="0 0 24 24" fill="currentColor">
              <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
            </svg>
            <div class="text-left">
              <div class="text-xs sm:text-xs text-text-secondary leading-tight">Soon on</div>
              <div class="text-sm font-medium">Google Play</div>
            </div>
          </div>
        </div>
      </div>
    </ScrollReveal>
  </div>
</section>

<script>
  const form = document.getElementById('waitlist-form');
  const successMessage = document.getElementById('success-message');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(form as HTMLFormElement);

    try {
      await fetch((form as HTMLFormElement).action, {
        method: 'POST',
        body: formData,
        headers: {
          'Accept': 'application/json'
        }
      });

      successMessage?.classList.remove('hidden');
      (form as HTMLFormElement).reset();

      setTimeout(() => {
        successMessage?.classList.add('hidden');
      }, 5000);
    } catch (error) {
      console.error('Form submission error:', error);
    }
  });
</script>
