---
import { getTranslations } from '../../i18n';
import Badge from '../ui/Badge.astro';
import Button from '../ui/Button.astro';
import PhoneMockup from '../animated/PhoneMockup';
import FloatingElement from '../animated/FloatingElement';

interface Props {
  locale?: 'fr' | 'en';
}

const { locale = 'fr' } = Astro.props;
const t = getTranslations(locale);
---

<section class="relative min-h-screen flex items-center justify-center pt-20 pb-12 overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-hero" />

  <!-- Tatami grid pattern -->
  <div class="absolute inset-0 opacity-[0.02]" style="background-image: repeating-linear-gradient(0deg, transparent, transparent 39px, rgba(255, 149, 0, 0.3) 39px, rgba(255, 149, 0, 0.3) 40px), repeating-linear-gradient(90deg, transparent, transparent 39px, rgba(255, 149, 0, 0.3) 39px, rgba(255, 149, 0, 0.3) 40px);" />

  <!-- Floating decorative elements -->
  <div class="absolute top-1/4 left-10 opacity-20 hidden lg:block">
    <FloatingElement client:visible delay={0.5} duration={8}>
      <div class="w-20 h-20 rounded-xl bg-accent/30 backdrop-blur-sm" />
    </FloatingElement>
  </div>
  <div class="absolute bottom-1/4 right-10 opacity-20 hidden lg:block">
    <FloatingElement client:visible delay={1} duration={7}>
      <div class="w-16 h-16 rounded-full bg-success/30 backdrop-blur-sm" />
    </FloatingElement>
  </div>

  <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left: Text content -->
      <div class="text-center lg:text-left space-y-6 animate-fade-in">
        <!-- Badge -->
        <Badge variant="accent" class="animate-slide-up">
          <span class="w-2 h-2 rounded-full bg-accent animate-pulse mr-1.5" />
          {t.hero.badge}
        </Badge>

        <!-- Main headline -->
        <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold tracking-tight animate-slide-up animation-delay-100">
          {t.hero.title}
          <br />
          <span class="gradient-text italic">{t.hero.titleHighlight}</span>
          <br />
          {t.hero.titleEnd}
        </h1>

        <!-- Subtitle -->
        <p class="text-lg sm:text-xl text-text-secondary max-w-xl mx-auto lg:mx-0 animate-slide-up animation-delay-200">
          {t.hero.subtitle}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start animate-slide-up animation-delay-300">
          <Button variant="primary" size="lg" href="#waitlist">
            {t.hero.cta}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </Button>
          <Button variant="secondary" size="lg" href="#features">
            {t.hero.ctaSecondary}
          </Button>
        </div>

        <!-- Store badges -->
        <div class="flex items-center gap-4 justify-center lg:justify-start pt-4 animate-slide-up animation-delay-400">
          <span class="text-text-secondary text-sm">{t.hero.comingSoon}</span>
          <div class="flex gap-3">
            <!-- App Store -->
            <div class="h-10 px-4 bg-bg-secondary rounded-lg flex items-center gap-2 opacity-60 cursor-not-allowed">
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
              </svg>
              <div class="text-left">
                <div class="text-[8px] text-text-secondary">Soon on</div>
                <div class="text-xs font-medium -mt-0.5">App Store</div>
              </div>
            </div>
            <!-- Google Play -->
            <div class="h-10 px-4 bg-bg-secondary rounded-lg flex items-center gap-2 opacity-60 cursor-not-allowed">
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
              </svg>
              <div class="text-left">
                <div class="text-[8px] text-text-secondary">Soon on</div>
                <div class="text-xs font-medium -mt-0.5">Google Play</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right: Phone mockup -->
      <div class="relative flex justify-center lg:justify-end animate-fade-in animation-delay-200">
        <PhoneMockup
          client:visible
          screenshot="/images/screenshots/home.png"
        />
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
