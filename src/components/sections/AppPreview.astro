---
import { getTranslations } from '../../i18n';
import ScrollReveal from '../animated/ScrollReveal';
import PhoneCarousel from '../animated/PhoneCarousel';

interface Props {
  locale?: 'fr' | 'en';
}

const { locale = 'fr' } = Astro.props;
const t = getTranslations(locale);

const screenshots = [
  { src: '/images/langage.png', alt: 'Language selection screen' },
  { src: '/images/screenshots/exercise.png', alt: 'Exercise screen' },
  { src: '/images/screenshots/lessons.png', alt: 'Lessons screen' },
  { src: '/images/screenshots/profile.png', alt: 'Profile screen' },
  { src: '/images/profile2.png', alt: 'Profile stats screen' },
];
---

<section class="relative py-12 sm:py-16 md:py-24 lg:py-32 overflow-hidden bg-bg-code">
  <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <ScrollReveal client:visible className="text-center mb-6 sm:mb-8">
      <h2 class="section-title mb-4">
        {t.appPreview.title}
      </h2>
      <p class="section-subtitle mx-auto">
        {t.appPreview.subtitle}
      </p>
    </ScrollReveal>

    <!-- Interactive Phone Carousel -->
    <PhoneCarousel client:visible screenshots={screenshots} />

    <!-- Decorative elements - responsive sizes -->
    <div class="absolute top-10 sm:top-20 left-4 sm:left-10 w-20 sm:w-32 h-20 sm:h-32 bg-accent/10 rounded-full blur-3xl" />
    <div class="absolute bottom-10 sm:bottom-20 right-4 sm:right-10 w-24 sm:w-40 h-24 sm:h-40 bg-warning/10 rounded-full blur-3xl" />
  </div>
</section>
