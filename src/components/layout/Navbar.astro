---
import { getTranslations } from '../../i18n';

interface Props {
  locale?: 'fr' | 'en';
}

const { locale = 'fr' } = Astro.props;
const t = getTranslations(locale);
const otherLocale = locale === 'fr' ? 'en' : 'fr';
const otherLocaleUrl = locale === 'fr' ? '/en' : '/';
---

<nav class="fixed top-0 left-0 right-0 z-50 glass">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href={locale === 'fr' ? '/' : '/en'} class="flex items-center group">
        <span class="text-xl font-bold text-text-primary transition-transform duration-300 group-hover:scale-105">
          Read<span class="text-logo-slash">/</span><span class="text-logo-bracket">&lt;</span>ode
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a
          href="#features"
          class="text-text-secondary hover:text-text-primary transition-colors duration-200"
        >
          {t.nav.features}
        </a>
        <a
          href="#how-it-works"
          class="text-text-secondary hover:text-text-primary transition-colors duration-200"
        >
          {t.nav.howItWorks}
        </a>

        <!-- Language Toggle -->
        <a
          href={otherLocaleUrl}
          class="flex items-center gap-1.5 px-3 py-1.5 rounded-md bg-bg-tertiary/50 hover:bg-bg-tertiary transition-colors duration-200"
        >
          <span class="text-sm font-medium">{otherLocale.toUpperCase()}</span>
        </a>

        <!-- CTA Button -->
        <a
          href="#waitlist"
          class="btn-primary text-sm py-2 px-4"
        >
          {t.nav.download}
        </a>
      </div>

      <!-- Mobile Menu Button - larger touch target -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-3 -m-1 rounded-lg hover:bg-bg-tertiary transition-colors duration-200 touch-manipulation min-touch-target"
        aria-label="Toggle navigation menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu - improved touch targets and accessibility -->
  <div
    id="mobile-menu"
    class="hidden md:hidden glass border-t border-white/10"
    role="navigation"
    aria-label="Mobile navigation"
  >
    <div class="px-4 py-6 space-y-2">
      <a
        href="#features"
        class="block py-3 px-4 -mx-4 text-base text-text-secondary hover:text-text-primary hover:bg-bg-tertiary/50 transition-all duration-200 rounded-lg"
      >
        {t.nav.features}
      </a>
      <a
        href="#how-it-works"
        class="block py-3 px-4 -mx-4 text-base text-text-secondary hover:text-text-primary hover:bg-bg-tertiary/50 transition-all duration-200 rounded-lg"
      >
        {t.nav.howItWorks}
      </a>
      <div class="flex flex-col sm:flex-row items-stretch gap-3 pt-4 border-t border-white/10 mt-4">
        <a
          href={otherLocaleUrl}
          class="flex items-center justify-center gap-2 px-4 py-3 rounded-lg bg-bg-tertiary/50 hover:bg-bg-tertiary transition-colors duration-200 min-h-[44px]"
        >
          <span class="text-base font-medium">{otherLocale.toUpperCase()}</span>
        </a>
        <a
          href="#waitlist"
          class="btn-primary text-base py-3 px-6 flex-1 text-center min-h-[44px]"
        >
          {t.nav.download}
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    const isHidden = mobileMenu?.classList.contains('hidden');
    mobileMenu?.classList.toggle('hidden');
    menuButton?.setAttribute('aria-expanded', isHidden ? 'true' : 'false');
  });

  // Close menu when clicking on links
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuButton?.setAttribute('aria-expanded', 'false');
    });
  });

  // Close menu on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !mobileMenu?.classList.contains('hidden')) {
      mobileMenu?.classList.add('hidden');
      menuButton?.setAttribute('aria-expanded', 'false');
      menuButton?.focus();
    }
  });
</script>
