---
import Navbar from './Navbar.astro';
import Footer from '../sections/Footer.astro';
import '../../styles/global.css';

interface Props {
  title: string;
  description: string;
  locale?: 'fr' | 'en';
}

const { title, description, locale = 'fr' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="ReadKode" />
    <meta name="keywords" content="apprendre programmation, lire code, Python, exercices code, ReadKode, learn coding, read code" />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content="/images/og-image.png" />
    <meta property="og:locale" content={locale === 'fr' ? 'fr_FR' : 'en_US'} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/images/og-image.png" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#1A1919" />

    <title>{title}</title>

    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body class="bg-bg-primary text-text-primary font-mono antialiased">
    <Navbar locale={locale} />
    <main>
      <slot />
    </main>
    <Footer locale={locale} />
  </body>
</html>
